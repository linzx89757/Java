<jsp:useBean id="infoService" class="service.imp.InfoService" scope="session"></jsp:useBean>
<%
    //调用业务逻辑层方法，获取所有信息列表
	List<Information> list = infoService.getAllInfo();
%>	
	<div>				
		<div id="menu">
			<ul>
				<li class="first"><a href="main.jsp">信息浏览</a></li>
